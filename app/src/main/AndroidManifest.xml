<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AirAdmin"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.airplanesViews.FavoritesAirplaneListView"
            android:label="@string/list_of_favorite_airplanes">
        </activity>
        <activity
            android:name=".view.airplanesViews.AirplaneEditView"
            android:label="@string/editAirplane">
        </activity>
        <activity
            android:name=".view.airplanesViews.AirplaneDetailsView"
            android:label="@string/airplaneDetails">
        </activity>
        <activity android:name=".view.airplanesViews.AirplaneListView"
            android:label="@string/airplaneList">

        </activity>
        <activity android:name=".view.airplanesViews.AirplaneRegisterView"
            android:label="@string/newAirplane">
        </activity>
        <activity
            android:name=".view.airportsViews.AirportEditView"
            android:label="@string/editAirport">
        </activity>
        <activity
            android:name=".view.airportsViews.AirportDetailsView"
            android:label="@string/airportDetails">
        </activity>
        <activity android:name=".view.airportsViews.AirportListView"
            android:label="@string/airportList">

        </activity>
        <activity android:name=".view.airportsViews.AirportRegisterView"
            android:label="@string/newAirport">

        </activity>
        <activity
            android:name=".view.IndexView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>