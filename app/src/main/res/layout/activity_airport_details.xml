<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="20dp"
        android:radius="20dp"
        app:cardBackgroundColor="#40DFDDDD">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/airport_details_name"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageViewLocation"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/airport_details_city"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="28dp"
                android:text="TextView"
                app:layout_constraintTop_toBottomOf="@+id/airport_details_name"
                tools:layout_editor_absoluteX="253dp" />

            <TextView
                android:id="@+id/textViewCity3"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Ciudad:"
                android:textColor="#E53935"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/airport_details_city"
                tools:layout_editor_absoluteX="253dp" />

            <TextView
                android:id="@+id/airport_details_foundation_year"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="28dp"
                android:text="TextView"
                app:layout_constraintTop_toBottomOf="@+id/airport_details_city"
                tools:layout_editor_absoluteX="253dp" />

            <TextView
                android:id="@+id/textViewFoundationYear2"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Año de fundación:"
                android:textColor="#E53935"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/airport_details_foundation_year"
                tools:layout_editor_absoluteX="253dp" />

            <CheckBox
                android:id="@+id/active"
                android:layout_width="84dp"
                android:layout_height="39dp"
                android:text="Activo"
                app:layout_constraintTop_toBottomOf="@+id/airport_details_foundation_year"
                tools:layout_editor_absoluteX="253dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>